.canvas {
  width: 80px;
  height: 80px;
}
.getchart{
  width: 100rpx;
  height: 100rpx;
  background: green;
  margin: 0 auto;
}
.nav{
  background: #FEDB5A;
  width: 100%;
  height: 88rpx;
  
  display: flex;
}

.year{
  position: relative;
  width: 160rpx;
  height: 88rpx;
  margin-top: 20rpx;

}
.month{
  position: relative;
  width: 460rpx;
  height: 88rpx;
  margin-top: 20rpx;
  overflow-x: auto;
  
}
.date{
  position: relative;
  width: 160rpx;
  height: 88rpx;
  margin-top: 10rpx;
  text-align: center;


}
.month-list{

  width: 960rpx;
  height: 100%;
  display: flex;
 
 
}
.month-item{
  
  width: 80rpx;
  height: 100%;
  
}
/* .month{
  width: calc(100%-320rpx);
  height: 88rpx;
} */
.year-box{
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  text-align: center;
  line-height: 88rpx;
}
.iconfont{
  width: 30rpx;
  height: 30rpx;
  font-size: 26rpx;
  margin-left:10rpx;
  vertical-align: middle;
}
.year-list{
  position: absolute;
  top: -1000rpx;
  left: 0;
  background-color: #FEDB5A;
  width: 100%;
  max-height: 640rpx;
  overflow-y: auto;
  transition: top 1s;
}

.year-item{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
}
.date-box{
  display: flex;
  width: 100%; 
  height: 100%;
  
}
.line{
  width: 1rpx;
  height: 40rpx;
  background: #866A21;
}
.text{
  display: inline-block;
}
.date box .icontfont{
  font-size: 26rpx;
  color: #000;
}
.date-list{
  position: absolute;
  top: -1000rpx;
  left: 0;
  background-color: #FEDB5A;
  width: 100%;
  max-height: 640rpx;
  overflow-y: auto;
  transition: top 1s;
}
.show{
  top: 66rpx;
}

.date-item{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
}
/* 标题 */
.title{
  display: flex;
  margin-top: 20rpx;
}
.title-item{
  width: 50%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.title-item-content{
  border: 1px solid transparent;
  border-radius: 30rpx;
  text-align: center;
}
.title-text{
  font-weight: bold;
  padding: 10rpx 0;
  color: #444;
}
.title-money{
  padding-bottom: 10rpx;
  font-weight: bold;
}
/* 收入框 */
.act.shouru{
  border-color: #FE5B62;
}
.shouru .title-money{
  color: #FE5B62
}

/* 支出框 */
.act.zhichu{
  border-color: #1F8167;
}
.zhichu .title-money{
  color: #1F8167
}